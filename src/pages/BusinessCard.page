<apex:page showHeader="false" standardStylesheets="false" sidebar="false"
           applyHtmlTag="false" applyBodyTag="false" docType="html-5.0">
    <html xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink"
          lang="en">

    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <meta http-equiv="X-UA-Compatible" content="ie=edge" />
        <title>Document</title>
        <apex:slds />
    </head>

    <body>
        <div class="slds-scope">
            <!-- first name, last name, email, phone, and title information using the appropriate Visualforce global variables. -->
            <article class="slds-card">
                <div class="slds-card__header slds-grid">
                    <header class="slds-media slds-media_center slds-has-flexi-truncate">
                        <div class="slds-media__figure">
                            <span class="slds-icon_container slds-icon-standard-user"
                                  title="user">
                                <svg class="slds-icon slds-icon_small"
                                     aria-hidden="true">
                                     <use xlink:href="{!URLFOR($Asset.SLDS, 'assets/icons/standard-sprite/svg/symbols.svg#user')}"></use>
                                </svg>
                                <span class="slds-assistive-text">user</span>
                            </span>
                        </div>
                        <div class="slds-media__body">
                            <h2 class="slds-card__header-title">
                                <a href="javascript:void(0);" class="slds-card__header-link slds-truncate"
                                   title="Accounts">
                                    <span>Accounts</span>
                                </a>
                            </h2>
                        </div>
                        <div class="slds-no-flex">
                            <button class="slds-button slds-button_neutral" onclick="sendEmail()">Send Email</button>
                        </div>
                    </header>
                </div>
                <div class="slds-card__body slds-card__body_inner">
                    <dl class="slds-dl_horizontal">
                        <dt class="slds-dl_horizontal__label">First Name</dt>
                        <dd class="slds-dl_horizontal__detail">{!$User.FirstName}</dd>
                        <dt class="slds-dl_horizontal__label">Last Name</dt>
                        <dd class="slds-dl_horizontal__detail">{!$User.LastName}</dd>
                        <dt class="slds-dl_horizontal__label">Email</dt>
                        <dd class="slds-dl_horizontal__detail">{!$User.Email}</dd>
                        <dt class="slds-dl_horizontal__label">Phone</dt>
                        <dd class="slds-dl_horizontal__detail">{!$User.Phone}</dd>
                        <dt class="slds-dl_horizontal__label">Title</dt>
                        <dd class="slds-dl_horizontal__detail">{!$User.Title}</dd>
                    </dl>
                </div>
            </article>
        </div>
        <script>
            function sendEmail() {
                var firstName = "{!JSENCODE($User.FirstName)}"
                var lastName = "{!JSENCODE($User.LastName)}"
                var name = `${firstName} ${lastName}`
                var email = "{!JSENCODE($User.Email)}"
                var phone = "{!JSENCODE($User.Phone)}"
                var title = "{!JSENCODE($User.Title)}"

                var subject = `Contact Information for ${name}`
                var body = `Fullname: ${name} - Title: ${title} - Email: ${email} - Phone: ${phone}`

                var message = `mailto:?subject=${subject}&body=${body}`
                window.location.href = message
            }
        </script>
    </body>

    </html>
</apex:page>