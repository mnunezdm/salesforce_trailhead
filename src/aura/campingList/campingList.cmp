<aura:component controller="CampingListController">
    <aura:attribute name="items" type="Camping_Item__c[]" default="[]" />
    <aura:attribute name="newItem" type="Camping_Item__c" default='{"sobjectType": "Camping_Item__c",
                                                                    "Name": "", "Price__c": 0, "Quantity__c": 0, "Packed__c": false}' />

    <aura:handler name="init" action="{!c.doInit}" value="{!this}"/>

    <lightning:layout class="slds-grid slds-grid_align-center">
        <lightning:layoutItem padding="around-small" size="6">
            <!-- CREATE NEW CAMPING ITEM -->
            <div aria-labelledby="campingForm">
                <!-- BOXED AREA -->
                <fieldset class="slds-box slds-theme_default">
                    <legend id="campingForm" class="slds-text-heading_small slds-p-vertical_medium">
                        Add List Item
                    </legend>

                    <!-- CREATE NEW CAMPING ITEM FORM -->
                    <form class="slds-form_stacked">
                        <lightning:input label="Name" type="text" title="Name Item"
                                         aura:id="campingForm" value="{!v.newItem.Name}" />
                        <lightning:input label="Price" type="number" value="{!v.newItem.Price__c}"
                                         min="0.1" step="0.01" aura:id="campingForm"
                                         formatter="currency" />
                        <lightning:input label="Quantity" type="number" min="1"
                                         value="{!v.newItem.Quantity__c}"
                                         aura:id="campingForm"
                                         messageWhenRangeUnderflow="Enter a quantity that's at least 1" />
                        <lightning:input label="Packed" type="checkbox" name="Packed"
                                         aura:id="campingForm" checked="{!v.newItem.Packed__c}" />
                        <div class="slds-grid slds-grid_align-center">
                            <lightning:button label="Create Camping" class="slds-m-top_medium"
                                              variant="brand" onclick="{!c.clickCreateItem}" />
                        </div>
                    </form>
                    <!-- / CREATE NEW CAMPING ITEM FORM -->
                </fieldset>
                <!-- / BOXED AREA -->
            </div>
            <!-- / CREATE NEW CAMPING ITEM -->
        </lightning:layoutItem>
    </lightning:layout>

    <aura:iteration items="{!v.items}" var="camping">
        <c:campingListItem item="{!camping}" />
    </aura:iteration>
</aura:component>