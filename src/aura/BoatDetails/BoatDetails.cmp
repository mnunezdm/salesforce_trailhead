<aura:component implements="flexipage:availableForAllPageTypes" access="global">
    <aura:attribute name="boat" type="Boat__c"/>
    <aura:attribute name="id" type="Id"/>

    <aura:attribute name="fields" type="String[]" default="['Id', 'Name', 'Description__c', 'Price__c', 'Length__c',
                                                            'Contact__r.Name', 'Contact__r.Email', 'Contact__r.HomePhone',
                                                            'BoatType__r.Name', 'Picture__c']"/>

    <force:recordData aura:id="service"
                      recordId="{!v.id}"
                      mode="VIEW"
                      targetFields="{!v.boat}"
                      fields="{!v.fields}"
                      recordUpdated="{!c.onRecordUpdated}"/>

    <aura:handler event="c:BoatSelected" action="{!c.onBoatSelected}"/>

    <aura:if isTrue="{! !empty(v.boat)}">
        <lightning:tabset>
            <lightning:tab label="Details">
                <c:BoatDetail boat="{!v.boat}"/>
            </lightning:tab>
            <lightning:tab label="Reviews">
                TODO
            </lightning:tab>
            <lightning:tab label="Add Review">
                <c:AddBoatReview boat="{!v.boat}"/>
            </lightning:tab>
        </lightning:tabset>
    </aura:if>

</aura:component>